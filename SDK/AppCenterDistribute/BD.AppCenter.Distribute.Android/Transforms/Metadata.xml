<?xml version="1.0" encoding="UTF-8"?>
<metadata>

    <!-- Remove types that aren't used in wrapper SDK. -->
    <remove-node path="/api/package[@name='com.BD.AppCenter.distribute']/class[not(@name='Distribute' or @name='ReleaseDetails' or contains(@name,'Activity') or contains(@name,'Receiver'))]" />
    <remove-node path="/api/package[@name='com.BD.AppCenter.distribute']/interface[not(contains(@name,'Listener'))]" />
    <remove-node path="/api/package[@name='com.BD.AppCenter.distribute.channel']" />
    <remove-node path="/api/package[starts-with(@name,'com.BD.AppCenter.distribute.download')]" />
    <remove-node path="/api/package[starts-with(@name,'com.BD.AppCenter.distribute.ingestion')]" />
    <remove-node path="/api/package[starts-with(@name,'com.BD.AppCenter.distribute.install')]" />

    <!-- Fix binding events. -->
    <attr path="/api/package[@name='com.BD.AppCenter.distribute']/class[@name='Distribute']/method[@name='setListener']" name="eventName">Release</attr>
    <attr path="/api/package[@name='com.BD.AppCenter.distribute']/class[@name='Distribute']/method[@name='setListener']" name="visibility">public</attr>
    
    <!-- Explicitly adding bindings for internal methods. -->
    <add-node path="/api/package[@name='com.BD.AppCenter.distribute']/class[@name='Distribute']">
        <method name="unsetInstance" return="void" abstract="false" native="false" synchronized="true" static="true" final="false" deprecated="not deprecated" visibility="public" />
    </add-node>

    <!-- Changing namespaces to C# style. -->
    <attr path="/api/package[@name='com.BD.AppCenter.distribute']" name="managedName">BD.AppCenter.Distribute.Android</attr>
</metadata>
